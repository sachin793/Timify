<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="7dp"
    app:cardBackgroundColor="#ffffff"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="DATA STRUCTURES"
            android:textColor="#066ae4"
            android:textSize="25sp" />



        <ImageButton
            style="?android:attr/actionOverflowButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="315dp"
            android:layout_marginTop="-12dp"
            android:layout_marginRight="-10dp"
            android:id="@+id/imagebutton"
            android:onClick="menu"
            />
        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subject"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="21sp"
            android:text="Practical"
            />

        <TextView
            android:id="@+id/teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/subject"
            android:layout_below="@id/type"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="9dp"
            android:text="Shashank sir"
            android:textColor="#579df9"
            android:textSize="19sp" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/room"
            android:id="@+id/duration"
            android:gravity="center"
            android:text="60 minutes"
            android:textSize="19sp"
            android:textColor="#579df9"
            android:layout_marginLeft="171dp" />

        <TextView
            android:id="@+id/room"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@id/subject"
            android:layout_below="@id/teacher"
            android:layout_marginTop="16dp"
            android:background="#a1f5bc"
            android:gravity="center"
            android:text="GS5"
            android:textColor="#1b0000"
            android:textSize="25sp" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_alignTop="@id/room"
            android:layout_below="@id/teacher"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/time1"
            android:layout_toRightOf="@id/room"
            android:background="#a1f5bc"
            android:gravity="center"
            android:text="3:20 - 4:20"
            android:textColor="#1b0000"
            android:textSize="25sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
